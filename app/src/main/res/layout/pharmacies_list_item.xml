<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"
    android:columnCount="4"
    android:id="@+id/medicine_item"
    style="@style/list_item_style"
    android:background="@drawable/border_list_item"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp">

    <LinearLayout
        style="@style/list_item_style"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/pharma_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leys"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pharma_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zuidstraat 77"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pharma_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02 503 52 39"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/phoneButton"
        android:layout_width="42dp"
        android:layout_height="84dp"
        android:layout_row="0"
        android:layout_column="3"
        android:background="@android:color/white"
        android:src="@drawable/ic_phone"
        android:tint="#16e30b"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/locationButton"
        android:layout_width="42dp"
        android:layout_height="84dp"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@android:color/white"
        android:src="@drawable/ic_location"
        android:tint="#EF0A0A"
        tools:ignore="ContentDescription" />

</GridLayout>
